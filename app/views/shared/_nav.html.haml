%nav.top-bar
  %ul.title-area
    %li.name
      %h1
        %a(href="#")
          Tourmii
    %li.toggle-topbar.menu-icon
      %a(href="#")
        %span Menu

  %section.top-bar-section
    %ul.left
      %li.divider
      %li
        = text_field_tag 'search', nil, :class=>'search-field', :placeholder=>'Search for places near you', :autofocus=>'autofocus'
    %ul.right
      %li.has-dropdown
        %a(href="#")= @auth.email if @auth.present?
        %ul.dropdown
          %li= link_to :Settings
          %li= link_to :Logout, login_path, :method=>'delete'