.intro-image-container(style="background:url('#{@photo_url}') no-repeat center center fixed;")
.row
  .large-12.columns
    .intro-message
      Build tours for you and your friends
.row
  .large-6.columns
    .intro-forms
      %h3 Signup
      = form_for @user do |f|
        = f.text_field :first_name, :placeholder=>'First Name'
        = f.text_field :last_name, :placeholder=>'Last Name'
        = f.text_field :email, :placeholder=>'Email Address'
        = f.password_field :password, :placeholder=>'Password'
        = f.password_field :confirm_password, :placeholder=>'Confirm Password'
        = f.submit
  .large-6.columns



