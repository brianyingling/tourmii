.row
  .small-2.columns
  .small-8.small-centered.columns
    .flash_notice= flash[:notice] if flash[:notice].present?
    = form_tag '/login', :remote=>true do
      %fieldset
        = text_field_tag      :email, nil, :placeholder=>'Email'
        = password_field_tag  :password, nil, :placeholder=>'Password'
        = submit_tag :Login, :class=>'button tiny secondary', :remote=>true
  .small-2.columns
